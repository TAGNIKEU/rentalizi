<odoo>
    <data>
        <record id="rentalizi_adresse_tree_view" model="ir.ui.view">
            <field name="name">rentalizi.adresse.tree.view</field>
            <field name="model">rentalizi.adresse</field>
            <field name="arch" type="xml">
                <tree string="Adresses">
                    <field name="adresse"/>
                    <field name="adresse_2"/>
                    <field name="ville_id"/>
                    <field name="code_postal"/>
                    <field name="region"/>
                    <field name="pays"/>
                </tree>
            </field>
        </record>
        <record id="rentalizi_adresse_form_view" model="ir.ui.view">
            <field name="name">rentalizi.adresse.form.view</field>
            <field name="model">rentalizi.adresse</field>
            <field name="arch" type="xml">
                <form string="Adresses">
                    <sheet>
                        <group>
                            <field name="adresse"/>
                            <field name="adresse_2"/>
                            <field name="ville_id"/>
                            <field name="code_postal"/>
                            <field name="region"/>
                            <field name="pays"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_adresses_rentalizi" model="ir.actions.act_window">
            <field name="name">Adresses</field>
            <field name="res_model">rentalizi.adresse</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>